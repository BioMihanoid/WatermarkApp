<Window x:Class="WatermarkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatermarkApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1280" Width="1920">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>

        <StackPanel Grid.Column="1" Margin="10" Background="#111">
            <TextBlock Text="Настройки Watermark" Foreground="White" FontWeight="Bold" FontSize="16"/>

            <Button Content="Загрузить изображение" Click="LoadImage_Click" Margin="0,10"/>
            <Button Content="Загрузить watermark (изображение)" Click="LoadWatermark_Click" />

            <CheckBox x:Name="UseTextCheckBox" Content="Использовать текст вместо изображения" Foreground="White" Margin="0,10"/>
            <TextBox x:Name="WatermarkTextBox" Text="My Watermark" Margin="0,0,0,10"/>

            <TextBlock Text="Кол-во по X" Foreground="White"/>
            <Slider x:Name="CountXSlider" Minimum="1" Maximum="10" Value="1" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>

            <TextBlock Text="Кол-во по Y" Foreground="White"/>
            <Slider x:Name="CountYSlider" Minimum="1" Maximum="10" Value="1" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>

            <TextBlock Text="Размер (%)" Foreground="White"/>
            <Slider x:Name="SizeSlider" Minimum="10" Maximum="200" Value="100" Margin="0,0,0,10"/>

            <TextBlock Text="Поворот (°)" Foreground="White"/>
            <Slider x:Name="RotationSlider" Minimum="0" Maximum="360" Value="0" Margin="0,0,0,10"/>

            <Button Content="Обновить предпросмотр" Click="UpdatePreview_Click" Margin="0,10"/>
            <Button Content="Сохранить результат" Click="SaveResult_Click" />
        </StackPanel>
    </Grid>
</Window>
